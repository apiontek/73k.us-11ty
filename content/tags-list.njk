---
permalink: /tags/
layout: layouts/home.njk
---
<h1>Tags</h1>

<ul class="taglist">
{% for tag in collections.posts | getAllTags | filterTagList %}
	{% set tagUrl %}/tags/{{ tag.name | slugify }}/{% endset %}
	<li><a href="{{ tagUrl }}" class="post-tag">{{ tag.name }}</a> ({{ tag.count }} post{% if tag.count > 1 %}s{% endif %})</li>
{% endfor %}
</ul>
